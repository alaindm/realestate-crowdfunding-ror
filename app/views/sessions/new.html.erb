<% provide(:title, "Log in - Entrar") %>
<% provide(:meta_desc, "Conectar no Imobank com sua conta") %>
<% provide(:meta_keywords, "conectar, logar, log, entrar,") %>
<% provide(:robots, "NOINDEX, NOFOLLOW") %>

<div class="ui main container">
<div class="ui grid stackable">
<div class="ui eight wide column">
  <div class="ui header">Login</div>
  <div class="ui small header">Entre com seu usuário e senha:</div>
  <div class="ui divider"></div>
  <%= form_for(:session, url: login_path, html: { class: "ui form" }) do |f| %>
  <div class="field">
    <%= f.label :email, "E-mail" %>
    <%= f.email_field :email, class: 'form-control' %>

<div class="field">
    <%= f.label :password, "Senha" %>
    <%= f.password_field :password, class: 'form-control' %>
</div>
<%= link_to "Esqueceu sua senha?", new_password_reset_path %>
<br>
<div class="inline field">
    <%= f.label :remember_me, class: "ui checkbox" do %>
    <%= f.check_box :remember_me %>
    <span>Permanecer logado</span>

    <% end %>
    <%= f.submit "Entrar", class: "ui blue button" %>
</div>
<% end %>
<div class="ui divider"></div>
<p>Novo usuário?<%= link_to "  Cadastre-se", cadastrar_path %></p>
</div>
</div>
</div>
</div>
<script>
  $('.ui.checkbox')
  .checkbox()
  ;
</script>
