<% provide(:title, "Proposta de Projeto") %>
<h1>Cadastro de Proposta de Projeto</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
      
    <%= form_for @candidate, url: {action: "create"}  do |f| %>

      <%= render 'shared/error_messages_candidate', object: @candidate %>
      
      <%= f.label :name, "Nome Completo" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email, "E-mail" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :phone, "Telefone para contato" %>
      <%= f.telephone_field :phone, class: 'form-control' %>
      
      <%= f.label :company, "Empresa" %>
      <%= f.text_field :company, class: 'form-control' %>

      <%= f.label :description, "Descrição do Projeto" %>
      <%= f.text_area :description, class: 'form-control' %>
      
      <%= f.submit "Enviar", class: "btn btn-primary" %>
      
    <% end %>

  </div>
</div>