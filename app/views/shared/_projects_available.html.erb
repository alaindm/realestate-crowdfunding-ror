<% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.rate %></td>
        <td><%= link_to 'Show', project_path(:id) %></td>
      </tr>
<% end %>



<div class="ui main relaxed container stackable">
        <h3 class="ui horizontal divider header">
    <i class="bar database icon"></i>
    Projetos em captação  </h3>

        <div class="ui card">
            <div class="image">
                <%= image_tag("minimall.PNG", :alt => "Ilustração de mini mall") %>
            </div>
            <div class="content">
                <a class="header">Mini Mall</a>
                <div class="meta">
                    <span class="date">Rodovia Rio-Santos, Ubatuba, SP</span>
                </div>
