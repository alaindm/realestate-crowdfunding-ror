    <div class="ui center aligned column">
        <%= link_to "Processo de Investimento", como_funciona_para_o_investidor_path, :class=>"ui blue button fluid monitor only" %>
        <%= link_to "Processo de Investimento", como_funciona_para_o_investidor_path, :class=>"ui blue button mobile only" %>
    </div>
    <div class="ui center aligned column">
        <%= link_to "Dúvidas Frequentes", perguntas_frequentes_do_investidor_path, :class=>"ui orange button fluid monitor only" %>
        <%= link_to "Dúvidas Frequentes", perguntas_frequentes_do_investidor_path, :class=>"ui orange button mobile only" %>
    </div>
    <div class="ui center aligned column">
        <%= link_to "Projetos Disponíveis", projects_path, :class=>"ui green button fluid monitor only" %>
        <%= link_to "Projetos Disponíveis", projects_path, :class=>"ui green button mobile only" %>
    </div>
</div>
</div>
